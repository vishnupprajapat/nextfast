# Playwright Test Environment Variables

# Base URL for E2E tests (defaults to http://localhost:3000)
PLAYWRIGHT_TEST_BASE_URL=http://localhost:3000

# Test user credentials (for authentication tests)
TEST_ADMIN_USERNAME=testadmin
TEST_ADMIN_PASSWORD=testpassword123

TEST_USER_USERNAME=testuser
TEST_USER_PASSWORD=testuserpass123

# CI environment flag
CI=false

# Playwright browser settings
PLAYWRIGHT_BROWSERS_PATH=0

# Playwright skip browser download (useful for CI with pre-installed browsers)
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=0

# Enable/disable video recording (on, off, retain-on-failure, on-first-retry)
PLAYWRIGHT_VIDEO=retain-on-failure

# Enable/disable screenshots (on, off, only-on-failure)
PLAYWRIGHT_SCREENSHOT=only-on-failure

# Trace collection (on, off, retain-on-failure, on-first-retry)
PLAYWRIGHT_TRACE=on-first-retry

# Test timeout (in milliseconds)
PLAYWRIGHT_TIMEOUT=30000

# Number of workers for parallel test execution
PLAYWRIGHT_WORKERS=

# Headless mode (true/false)
PLAYWRIGHT_HEADLESS=true

# Slow motion (in milliseconds, useful for debugging)
PLAYWRIGHT_SLOWMO=0

# Database connection for test data setup
TEST_DATABASE_URL=

# API endpoint for test environment
TEST_API_URL=http://localhost:3000/api
